<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HIRAYA | SHOP</title>
    <link rel="stylesheet" type="text/css" href="/styles/shop-now.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" >
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
</head>
<body>
    <div class="header"><%- include('./partials/navbar.ejs')%></div>

    <div class="products row">
        <h3 id="trending">TRENDING NOW!</h3>
        <div class="carousel">
            <div class="row pics mx-auto justify-content-content">
                <div id='prevBtn' class="col-2 my-auto text-end d-none d-md-block">
                <img onclick="arrowClick()" src="/images/icons/left-prodhome.png" alt="Women's Clothing" style="width: 50%; cursor: pointer"/>
                </div>
                <div class="col-8 d-none d-md-block">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 text-center"><img id='image-1' class='trending-img' src="/images/products/product.jpg"  alt="Product 1" style="width: 100%" /></div>
                        <div class="col-lg-3 col-md-6 col-sm-6 text-center"><img id='image-2' class='trending-img' src="/images/products/product2.jpg" alt="Product 2" style="width: 100%" /></div>
                        <div class="col-lg-3 col-md-6 col-sm-6 text-center"><img id='image-3' class='trending-img' src="/images/products/product3.jpg" alt="Product 3" style="width: 100%" /></div>
                        <div class="col-lg-3 col-md-6 col-sm-6 text-center"><img id='image-4' class='trending-img' src="/images/products/product4.jpg" alt="Product 4" style="width: 100%" /></div>
                    </div>
                </div>

                <div id='nextBtn' class="col-2 my-auto d-none d-md-block">
                    <img onclick="arrowClick()" src="/images/icons/right-prodhome.png" alt="Men's Clothing" style="width: 50%; cursor: pointer" />
                </div>
            </div>
        </div>
    </div>

    <hr id="prodhome-divider" width ="100%" size="5" color="#C4B0AC" />

    <div class="category">
        <h2 class="category-title mt-4">SHOP BY CATEGORY</h2>
        <div class="row justify-content-center text-center pics mb-5">
            <div class="col-lg-3 col-md-4">
                <a href="/women" class="prod-category">
                    <img class='hanger' src="/images/icons/hanger-women.png" alt="Women"/>
                    <h3 class="name">WOMEN</h3>
                </a>
            </div>
            <div class="col-lg-3 col-md-4">
                <a href="/men" class="prod-category">
                    <img class='hanger' src="/images/icons/hanger-men.png" alt="Men" />
                    <h3 class="name">MEN</h3>
                </a>
            </div>  
        </div>
    </div>

    <script>
        let trendingProducts = ["/images/products/product.jpg", "/images/products/product2.jpg", "/images/products/product3.jpg","/images/products/product4.jpg"]
        let trendingProducts2 = ["/images/products/2ndset.png", "/images/products/2ndset(2).png", "/images/products/secondset(2).png", "/images/products/secondset(3).png"]
        let batchNum = 1

        function arrowClick(){
            (batchNum===1) ? (
                document.getElementById('image-1').src = trendingProducts2[0],
                document.getElementById('image-2').src = trendingProducts2[1],
                document.getElementById('image-3').src = trendingProducts2[2],
                document.getElementById('image-4').src = trendingProducts2[3],
                batchNum = 2
            ) : (
                document.getElementById('image-1').src = trendingProducts[0],
                document.getElementById('image-2').src = trendingProducts[1],
                document.getElementById('image-3').src = trendingProducts[2],
                document.getElementById('image-4').src = trendingProducts[3],
                batchNum = 1
            );
        }

    </script>

</body>
</html>